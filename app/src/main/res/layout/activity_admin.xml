<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A395C"
    tools:context=".Telas.AdminActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_admin"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#0A395C"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar_admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_criar_cliente"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="CRIAR CLIENTE"
            android:textColor="@android:color/white"
            android:backgroundTint="#00A8E8"
            android:padding="15dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_criar_servico"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="CRIAR SERVIÇO"
            android:textColor="@android:color/white"
            android:backgroundTint="#00A8E8"
            android:padding="15dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_criar_funcionario"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="CRIAR FUNCIONÁRIO"
            android:textColor="@android:color/white"
            android:backgroundTint="#00A8E8"
            android:padding="15dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_relatorios"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="RELATÓRIOS DE SERVIÇO"
            android:textColor="@android:color/white"
            android:backgroundTint="#00A8E8"
            android:padding="15dp"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>